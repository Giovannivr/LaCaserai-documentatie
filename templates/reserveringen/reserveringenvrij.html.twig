{% extends 'base.html.twig' %}

{% block title %}Hello ReserveringenController!{% endblock %}



{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <table class="table">
            <thead>
            <tr>
                <th>KamerId</th>
                <th>Kamertype</th>
                <th>Prijs</th>
                <th>Reserveer</th>
            </tr>
            </thead>
            <tbody>
            {% for reservering in kamers %}
                <tr>
                    <td>{{ reservering.id }}</td>
                    <td> {{ reservering.soortid.omschrijving|raw }}</td>
                    <td> {{ reservering.prijs ~ " Euro" }}</td>
                    <td><button class="btn-btn-danger">{{ button_label|default('Reserveer') }}</button></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Geen vrije kamers gevonden</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>



    </div>
{% endblock %}
{% block footer %}
{% endblock %}
