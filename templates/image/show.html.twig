{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table" style="color: white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src={{ vich_uploader_asset(image, 'imageFile') }} width="300px" height="200px"></td>
            </tr>
        </tbody>
    </table>
    <div style="display: flex">
        <a class="btn btn-primary" style="margin-right: 10px" href="{{ path('image_index') }}">back to list</a>

        <a class="btn btn-secondary" style="margin-right: 10px" href="{{ path('image_edit', {'id': image.id}) }}">edit</a>

        {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}
{% block footer %}
{% endblock %}
