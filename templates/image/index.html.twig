{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h1>Image index</h1>

    <table class="table" style="color: white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td><img src={{ vich_uploader_asset(image, 'imageFile') }} width="300px" height="200px"></td>
                <td>
                    <a class="btn btn-primary" href="{{ path('image_show', {'id': image.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('image_new') }}">Create new</a>
{% endblock %}
{% block footer %}

{% endblock %}
